<div class="ui bottom attached tab segment active" >
  <h5>Timing Summary</h5>
  <table class="ui selectable celled table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Time</th>
        <th>Total Time</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.timings as |result|}}
        <tr>
          <td data-label="Name">{{result.name}}</td>
          <td data-label="Time">{{result.time}}</td>
          <td data-label="Total Time">{{result.total_time}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <h5> Test Result Summary</h5>
  <table class="ui selectable celled table">
    <thead>
      <tr>
        <th>Stream</th>
        <th>Test Type</th>
        <th>Status</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.summaryResults as |result|}}
        <tr class="{{if (eq result.status 'passed') 'positive' (if (eq result.status 'skipped') 'warning' 'negative')}}">
          <td data-label="Stream">{{result.stream.name}}</td>
          <td data-label="Test Type">{{result.test_type}}</td>
          <td data-label="Status">{{link-to result.status 'authenticated.builds.show.stream.test_results' model.id result.stream.id (query-params status=result.status)}}</td>
          <td data-label="Count">{{result.count}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <h5> Profile Summary</h5>
  {{#each model.profileSummary as |result|}}
    <div>
      <br>
      <b>{{result.stream_name}}</b>
      <table class="ui selectable celled table">
        <thead>
          <tr>
            <th>Test</th>
            <th>Duration</th>
          </tr>
        </thead>
        <tbody>
          {{#each result.slow_tests as |test|}}
            <tr>
              <td data-label="Test">{{test.name}}</td>
              <td data-label="Duration">{{test.duration}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>

      <br>

      <table class="ui selectable celled table">
        <thead>
          <tr>
            <th>File</th>
            <th>Duration</th>
          </tr>
        </thead>
        <tbody>
          {{#each result.slow_files as |test|}}
            <tr>
              <td data-label="File">{{test.name}}</td>
              <td data-label="Duration">{{test.duration}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{/each}}
</div>
