{{dis-build build=model}}

<div class="flex flex-col mt-6 bg-white border w-full">
  <div class="flex justify-between">
    <ul class="list-reset p-3 flex flex-none">
      {{#each model.streams as |stream|}}
        {{stream-tab stream=stream}}
      {{/each}}
    </ul>
    <ul class="list-reset p-3 flex flex-none">
      <li class="p-2 {{if (is-url-active 'authenticated.builds.show.summary' model) 'font-bold border-b-2'}}">
        {{#link-to 'authenticated.builds.show.summary' model.id class="text-grey-darker "}}
          Summary
        {{/link-to}}
      </li>
      <li class="p-2 {{if (is-url-active 'authenticated.builds.show.artifacts' model) 'font-bold border-b-2'}}">
        {{#link-to 'authenticated.builds.show.artifacts' model.id class="text-grey-darker"}}
          Artifacts
        {{/link-to}}
      </li>
    </ul>
  </div>

  <div class="p-3">
    {{outlet}}
  </div>
</div>

